{
  "name": "nebuliton-app-lite",
  "version": "1.0.1",
  "main": "main.js",
  "description": "The official Nebuliton App Lite for Windows and Linux",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "de.nebuliton.lite",
    "productName": "Nebuliton App Lite",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  }
}
